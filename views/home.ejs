<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head')%> 
<body>
    

    <%- include('./partials/header')%> 
    <main>

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/images/banner3.jpg" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
       <br>
       <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="/images/shipping.svg" class="d-block w-100" alt="envio" height="50px"> Envío gratis desde $2500 
          </div>
          <div class="carousel-item">
            <img src="/images/payment.svg" class="d-block w-100" alt="pago" height="50px"> Pagá con tarjeta de credito o en efectivo
          </div>
          <div class="carousel-item">
            <img src="/images/protected.svg" class="d-block w-100" alt="sitio seguro" height="50px"> Seguridad, de principio a fin
          </div>
        </div>
      </div>
           <br>

        <div class="info">
            <div class="info-item">
                  <img src="/images/shipping.svg" alt="envio"> 
                  <p> Envío gratis desde $2500 </p>
              </div>
              <div class="info-item2">
                <img src="/images/payment.svg"  alt="pago"> 
                <p> Pagá con tarjeta de credito o en efectivo</p>
              </div>
              <div class="info-item">
                <img src="/images/protected.svg" alt="sitio seguro"> 
                <p> Seguridad, de principio a fin </p>
              </div>
          </div>
          
            <h3 class="titulares">Categorias</h3>
            <section class="categorias"> 
            
                    <article class="producto">
                        <a href="/products/categories/<%=categories[0].id %>">
                        <img src="/images/whiskys.webp" alt="Categoria whiskys" class="imagen-producto">                  
                        <div class="descripcion-producto-home">
                          <p class="descripciones-whiskys"><%= categories[0].name %> </p> 
                        </div>
                        </a>
                    </article>
            
                    <article class="producto">
                        <a href="/products/categories/<%=categories[1].id %>">
                        <img src="/images/espumantes.jpg" alt="Categoria espumantes" class="imagen-producto">                    
                        <div class="descripcion-producto-home">
                           <p class="descripciones-espumantes"><%= categories[1].name %></p>
                        </div>
                        </a>
                    </article>
                
                    <article class="producto">
                        <a href="/products/categories/<%=categories[2].id %>">
                        <img src="/images/cervezas.jpg" alt=" Categoria Cervezas" class="imagen-producto">                    
                        <div class="descripcion-producto">
                           <p class="descripciones-cervezas"><%= categories[2].name %></p>
                        </div>
                        </a>
                    </article>
               
                    <article class="producto">
                        <a href="/products/categories/<%=categories[3].id %>">
                        <img src="/images/gin.jpg" alt=" Categoria gins" class="imagen-producto">                    
                        <div class="ddescripcion-producto-home">
                           <p class="descripciones-gins"><%= categories[3].name %></p>
                        </div>
                        </a>
                    </article>
            
                    <article class="producto">
                        <a href="/products/categories/<%=categories[4].id %>">
                        <img src="/images/vinos_1.jpg" alt=" Categoria Vinos" class="imagen-producto">                    
                        <div class="descripcion-producto-home">
                           <p class="descripciones-vinos"><%= categories[4].name %></p>
                        </div>
                        </a>
                    </article>
                
                
                    <article class="producto">
                        <a href="/products/categories/<%=categories[5].id %>">
                        <img src="/images/licores_1.jpg" alt=" Categoria Licores" class="imagen-producto">                    
                        <div class="ddescripcion-producto-home">
                           <p class="descripciones-licores"><%= categories[5].name %></p>
                        </div>
                        </a>
                    </article>
                

            </section>
            <h3 class="titulares">Ofertas</h3>
            <section class="banner">
                <img src="/images/happyhour.jpg" alt="home banner" class="ofertas-banner">
            </section>
            <section class="ofertas"> 
                <% productsInOffer.forEach(product => { %>
                <article class="ofer-producto">
                    <img src="/images/<%= product.image %>" alt="Imagen producto" class="imagen-ofer-producto">
            
                        <p class="descripciones-ofer-producto"><a href="/products/detail/<%= product.id %>"><%= product.name %></p></a>
                   
                    <div class="ofer-precio-descuento">
                        <p class="ofer-precios"><%= product.price %></p>
                        <p class="descuentos">10%</p>
                        
                        <div class="ofer-container-button-carrito">
                                <input type="submit" value="Agregar al Carrito" class="ofer-button-carrito">
                        </div>
                    </div>             
                </article>
                <% }) %> 
            </section>

        <h3 class="titulares">Productos</h3>
        <section class="productos"> 
            <% productsInHome.forEach(product => { %> 
            <article class="ofer-producto">
                <img src="/images/<%= product.image %>" alt="Imagen producto"  class="imagen-ofer-producto">
        
                    <p class="descripciones-ofer-producto"><a href="/products/detail/<%= product.id %>"><%= product.name %></p></a>
               
                <div class="ofer-precio-descuento">
                    <p class="prod-precios"><%= product.price %></p>
                   
                    
                    <div class="ofer-container-button-carrito">
                            <input type="submit" value="Agregar al Carrito" class="ofer-button-carrito">
                    </div>
                </div>             
            </article>
            <% }) %> 

        </section>
          
        </main>
    
        
        <%- include('./partials/footer')%> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>