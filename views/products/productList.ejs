<%- include('../partials/head')%>

<body>

    <%- include('../partials/header')%>

    <main>

        <h2>TODOS LOS PRODUCTOS</h2>

        <% products.forEach(product => { %>

        <section class="container-similar-products">
            <a href="/products/detail/<%= products.id %> ">
                <article class="similar-product">
                    <img src="/images/<%= products.image %>" alt="Imagen de producto" class="imagen-producto-similar">
                    <p class="nombre-producto-similar"><%= products.name %></p>
                    <p class="precios-producto-similar"><%= products.price %></p>
                    <div class="container-button-psimilar">
                        <input type="submit" value="Agregar al carrito" class="button-psimilar">
                    </div>
                </article>
            </a>
        </section>

        <% }) %> 
        
    </main>

    <%- include('../partials/footer')%>

