<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%> 
<body>
    <%- include('../partials/header')%> 

    <main>
        <div class="contenedor">
            <h2>Crear un producto</h2>
            <form action="/products/create" method="POST" enctype="multipart/form-data" class="f-registro">
                
                <ul class="errores"></ul>
                <div>
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" placeholder="Ej: Vino tinto Malbec" class="barra formElement" required>
                </div>
                <div>
                    <label for="description">Descripción</label>
                    <input type="text" name="description" class="barra formElement"  value="<%= locals.oldData ? oldData.description : null %>">
                    <% if (locals.errors && errors.description) { %>
                        <div class="text-danger">
                            <%= errors.description.msg %>
                        </div>
                        <% } %>
                </div>
                <div>
                    <label for="image">Imagen del producto</label>
                    <input type="file" name="image" id="image" class="barra formElement">
                </div>
                <div>
                    <label for="category">Categoría</label>
                    <select name="category" id="category" class= "barra formElement">
                        <option value="1">Whiskys</option>
                        <option value="2">Espumantes</option>
                        <option value="3">Cervezas</option>
                        <option value="4">Gins</option>
                        <option value="5">Vinos</option>
                        <option value="6">Licores</option>
                    </select>

                    <!-- <label><input type="radio" name="category" class="formElement"value="1" required>Whiskys</label>
                    <label><input type="radio" name="category" value="2">Espumantes</label>
                    <label><input type="radio" name="category" value="3" required>Cervezas</label>
                    <label><input type="radio" name="category" value="4">Gins</label>
                    <label><input type="radio" name="category" value="5">Vinos</label>
                    <label><input type="radio" name="category" value="6">Licores</label> -->
                </div>
                <div>
                    <label for="size">Proporcion (ml)</label>
                    <input type="text" name="size" placeholder="Proporcion" class="barra formElement" id="proportion    " >
                    <p id="errorproportion"></p>
                </div>
                <div>
                    <label for="price">Precio ($)</label>
                    <input type="text" name="price" placeholder="Precio" class="barra formElement" id="price" >
                    <p id="errorprice"></p>
                </div>
                <div>
                    <label for="inOffer">En Oferta</label>
                    <select name="inOffer" id="inOffer" placeholder="" class="barra formElement">
                        <option value="1">Si</option>
                        <option value="0">No</option>
                    </select>
                    <p id="errorinOffer"></p>
                    <!-- <label><input type="radio" name="inOffer" value=1 required>Si</label>
                    <label><input type="radio" name="inOffer" value= 0>No</label> -->
                </div>
                <div>
                    <label for="inHome">Publicar en home</label>
                    <select name="inHome" id="inHome" class="barra formElement">
                        <option value="1">Si</option>
                        <option value="0">No</option>
                    </select>

                    <!-- <label><input type="radio" name="inHome" value= 1 required>Si</label>
                    <label><input type="radio" name="inHome" value= 0 >No</label> -->
                </div>
    
                <button type="reset" class="borrar">Borrar</button>
                <button type="submit" class="enviar">Guardar producto</button>
    
            </form>
        </div>
    
    </main>
    
    <%- include('../partials/footer')%> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script type="text/javascript" src="/js/productCreateValidation.js"></script>

</body>
</html>