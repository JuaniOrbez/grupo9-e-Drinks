<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head')%>

<body>

    <%- include('../partials/header')%>

    <main>
        <section class="product-container">
            <div class="imagen-con-lupa">
                <img src="/images/<%= product.image %>" alt="Imagen producto" class="imagen-producto">
                <i class="fa-solid fa-magnifying-glass-plus"></i>
            </div>
            <div class="detalles-producto">
                <p class="nombre-producto"> <%= product.name %> </p>
                <div class="half-rating">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                </div>
                <p class="precios"><%= product.price %></p>
                <p class="descripcion-producto"><%= product.description %></p>
                <div class="container-cantidad">
                    <label for="cantidad" class="label-cantidad">Cantidad</label>
                    <input id="cantidades" type="number" name="cantidad" class="cantidades" value="1" min="0" max="10">
                </div>
                <div class="container-button-carrito">
                    <div>
                        <a href="/products/cart"><input type="submit" value="Agregar al carrito"class="button-carrito"></a>
                        <br>
                        <a href="/products/"><input type="submit" value="Listado de productos"class="button-carrito"></a>
                        <br>
                        <% if (locals.isLogged) {%>
                        <a href="/products/<%= product.id %>/edit"><input type="submit" value="Editar producto"class="button-carrito"></a>
                        <% }%>
                        
                        
                    </div>
                </div>
            </div>
            </div>
        </section>

        <p class="titulo-similar-products">Productos similares</p>

        <section class="container-similar-products">
            <article class="similar-product">
                <img src="/images/<%= product.image %>" alt="Imagen producto" class="imagen-producto-similar">
                <p class="nombre-producto-similar"><a href="/products/detail/<%= product.id %>"><%= product.name %></p>
                </a>
                <p class="precios-producto-similar"><%= product.price %></p>
                <div class="container-button-psimilar">
                    <input type="submit" value="Agregar al carrito" class="button-psimilar">
                </div>
            </article>
        </section>

    </main>

    <%- include('../partials/footer')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
</body>

</html>